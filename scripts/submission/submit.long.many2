		sed "s/NUM1/$R/g; s/NUM2/$L/g; s/NNODES/$nodes/g; s/NPROCS/$procs/g; s/OMPPR/$omppr/g; s/DDCOMP/$ddcomp/g; s/partition/$PARTITION/g" submit.singleruns_2.tmp  > T60.eps400.long/R.$R.L.$L/submit2
		
		cd T60.eps400.long/R.$R.L.$L
		JOBID=`sbatch submit1 | sed 's/>//g;s/<//g' | awk '{print $4}'`
		echo "ORIG $R $L $JOBID"
		
		for p in `seq 1 10`
		do
			sed "s/PART/$p/g" submit2 > submit2.next
			JOBID=`sbatch --dependency=afterany:${JOBID} submit2.next | sed 's/>//g;s/<//g' | awk '{print $4}'`
			echo "$p $JOBID"
			sleep 2
		done
		cd -
		sleep 1

	done
done
